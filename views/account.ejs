<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>SastaOLX</title>
        <style>
            * {
                margin: 0;
                padding: 0;
            }
        </style>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        />
    </head>
    <body>
        <div class="container-fluid px-0">
            <%- include ('partials/nav.ejs') %>
            <div class="container-xl my-4 px-4">
                <p class="h3 fw-light">My Account</p>
                <div class="row my-4">
                    <div class="col-8 my-2">
                        <form>
                            <div class="form-row row">
                              <div class="col">
                                  <label for="firstName" class="mb-2">First Name</label>
                                <input type="text" class="form-control" placeholder="First name">
                              </div>
                              <div class="col">
                                    <label for="lastName" class="mb-2">Last Name</label>
                                <input type="text" class="form-control" placeholder="Last name">
                              </div>
                            </div>
                            <div class="form-row row mt-3">
                              <div class="col">
                                  <label for="dp" class="mb-2">Profile Picture</label>
                                <input type="file" class="form-control">
                              </div>
                              <div class="col">
                                    <label for="location" class="mb-2">Location</label>
                                <input type="text" class="form-control" placeholder="New Delhi, India">
                              </div>
                            </div>
                            <div class="form-row row mt-3">
                              <div class="col">
                                  <label for="phone" class="mb-2">Phone Number</label>
                                <input type="number" class="form-control" placeholder="9999900000"/>
                              </div>
                              <div class="col">
                                    <label for="email" class="mb-2">Email</label>
                                <input type="text" class="form-control" placeholder="devs@sastaolx.in">
                              </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">
                                    Update
                                </button>
                            </div>
                          </form>
                          <hr class="my-4"/>
                          <form>
                            <div class="form-row row">
                              <div class="col">
                                  <label for="opassword" class="mb-2">Old Password</label>
                                <input type="password" class="form-control" id="opassword" placeholder="*********">
                              </div>
                              <div class="col">
                                    <label for="npassword" class="mb-2">New Password</label>
                                <input type="text" class="form-control" id="npassword" placeholder="Last name">
                              </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">
                                    Change Password
                                </button>
                            </div>
                          </form>

                    </div>
                    <div class="col-md-4">
                        <div
                            class="card shadow-sm p-0 mb-5 bg-white rounded mx-2"
                        >
                            <img
                                class="card-img-top"
                                src="https://images.unsplash.com/photo-1517336714731-489689fd1ca8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8YXBwbGUlMjBsYXB0b3B8ZW58MHx8MHx8&w=1000&q=80"
                                alt="Card image cap"
                            />
                            <div class="card-body">
                                <h5 class="card-title h3">SastaOLX DEV</h5>
                                <p class="card-text" style="font-size: 0.9rem">
                                    <div class="row">
                                        <div class="h6">
                                            Phone Number
                                        </div>
                                        <p>
                                            9999900000
                                        </p>
                                    </div>
                                    <div class="row">
                                        <div class="h6">
                                            Email
                                        </div>
                                        <p>
                                            devs@sastaolx.in
                                        </p>
                                    </div>
                                    <div class="row">
                                        <div class="h6">
                                            Location
                                        </div>
                                        <p>
                                            New Delhi, India    
                                        </p>
                                    </div>
                                </p>
                                <div class="alert text-center alert-primary" role="alert">
                                    This Data Is Not Public
                                  </div>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
            <%- include ('partials/footer.ejs') %> 
        </div>
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        ></script>
    </body>
</html>
