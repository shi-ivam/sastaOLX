<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>SastaOLX</title>
        <style>
            * {
                margin: 0;
                padding: 0;
            }
        </style>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        />
    </head>
    <body>
        <div class="container-fluid px-0">
            <%- include ('partials/nav.ejs') %>

            <div class="container-xl px-2 my-4 pb-4">
                <p class="h3 px-3">Get Started</p>
                <div class="row">
                    <div class="col-md-6 p-2">
                        <div class="shadow-sm p-4">
                            <p class="h4 fw-light mb-3">Create</p>
                        <form>
                            <div class="form-row row">
                                <div class="col-sm">
                                    <label for="firstName" class="mb-2"
                                        >First Name</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        placeholder="First name"
                                    />
                                </div>
                                <div class="col-sm">
                                    <label for="lastName" class="mb-2"
                                        >Last Name</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        placeholder="Last name"
                                    />
                                </div>
                            </div>
                            <div class="form-row row mt-3">
                                <div class="col-sm">
                                    <label for="dp" class="mb-2"
                                        >Profile Picture</label
                                    >
                                    <input type="file" class="form-control" />
                                </div>
                                <div class="col-sm">
                                    <label for="location" class="mb-2"
                                        >Location</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        placeholder="New Delhi, India"
                                    />
                                </div>
                            </div>
                            <div class="form-row row mt-3">
                                <div class="col-sm">
                                    <label for="phone" class="mb-2"
                                        >Phone Number</label
                                    >
                                    <input
                                        type="number"
                                        class="form-control"
                                        placeholder="9999900000"
                                    />
                                </div>
                                <div class="col-sm">
                                    <label for="email" class="mb-2"
                                        >Email</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        placeholder="devs@sastaolx.in"
                                    />
                                </div>
                            </div>
                            <div class="form-row row mt-3">
                                <div class="col">
                                    <label for="password" class="mb-2"
                                        >Password</label
                                    >
                                    <input
                                        type="password"
                                        class="form-control"
                                        id="password"
                                        placeholder="*********"
                                    />
                                </div>
                                <div class="col">
                                    <label for="rpassword" class="mb-2"
                                        >Confirm Password</label
                                    >
                                    <input type="text" class="form-control"
                                    id="rpassword" placeholder="*********">
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">
                                    Create Account
                                </button>
                            </div>
                        </form>
                        </div>
                    </div>
                    <div class="col-md-6 p-2">
                        <div class="shadow-sm p-4">
                            <p class="h4 fw-light mb-3">Login</p>
                        <form>
                            <div class="form-row row">
                                <div class="col">
                                    <label for="firstName" class="mb-2"
                                        >Email</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        placeholder="Email"
                                    />
                                </div>
                            </div>
                            <div class="form-row row mt-3">
                                <div class="col">
                                    <label for="password" class="mb-2"
                                        >Password</label
                                    >
                                    <input
                                        type="password"
                                        class="form-control"
                                        id="password"
                                        placeholder="*********"
                                    />
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>

            <%- include ('partials/footer.ejs') %>
        </div>
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        ></script>
    </body>
</html>
